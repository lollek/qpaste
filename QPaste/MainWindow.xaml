<Window x:Class="QPaste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickPaste" Height="350" Width="525">
    <ListView x:Name="listView" Loaded="WindowLoaded" Unloaded="WindowUnloaded">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="30"/>
                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="400"/>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
